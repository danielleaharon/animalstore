@model Animal_Store.Models.Customer

@{
    ViewData["Title"] = "Register";
}

<html>
<head>
    <style>
        body, html {
            background-image: url("https://scontent.ftlv5-1.fna.fbcdn.net/v/t1.0-9/118448674_4301437069926934_1943137070436079307_o.jpg?_nc_cat=106&_nc_sid=730e14&_nc_ohc=v-COU9FIKgkAX9wmU5l&_nc_ht=scontent.ftlv5-1.fna&oh=35a50fcbe6862ab3046443ffe7830f14&oe=5F6CD36D")
        }
        .example1 {
            border: 2px solid black;
            padding: 10px;
            margin: auto;
            background-color: white;
            border-radius: 25px;
        }
    </style>
</head>
<body>
    <h1>Register</h1>

    <h4>New customer</h4>
    <hr />
    <div class="row">
        <div class="col-md-4">
            <form asp-action="Register" >
                <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                <div class="form-group">
                    <label asp-for="Name" class="control-label"></label><br />
                    <input  class="Textshow" asp-for="Name"  />
                    <span asp-validation-for="Name" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <label asp-for="Username" class="control-label"></label><br />
                    <input asp-for="Username"  class="Textshow" />
                    <span asp-validation-for="Username" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <label asp-for="Password" class="control-label"></label><br />
                    <input asp-for="Password"  class="Textshow" />
                    <span asp-validation-for="Password" class="text-danger"></span>
                </div>
                <div class="form-group" type="hidden">
                    <input type="hidden" asp-for="Usertype" class="form-control" value="userRegistered" />
                </div>
                <div class="form-group">



                </div>
                <div class="form-group">

                    <input type="submit" value="Register" class="example1" />
                    <a class="example1" style="color:black;" asp-controller="Home" asp-action="Index">Back to home page</a>
                </div>
            </form>
        </div>
    </div>

    <div>
        @*<form action="/Home/Index" method="get">

            <input type="submit" value="Back to Store">


        </form>*@

    </div>
</body>
</html>
@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
