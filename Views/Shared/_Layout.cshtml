<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - animalStore</title>
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="~/css/site.css" />
    <meta name="viewport" content="width=device-width, initial-scale=1">
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/4.7.0/css/font-awesome.min.css">
    <meta name="viewport" content="width=device-width, initial-scale=1">
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/4.7.0/css/font-awesome.min.css">
    <script src='https://kit.fontawesome.com/a076d05399.js'></script>
    <style>
        body, html {
            font-family: Narkisim;
        }

        a:hover {
            color: #F0FF00;
        }

        h1 {
            text-shadow: 2px 2px #F2C5D0;
            text-align: center
        }

        .Textshow {
            border-radius: 25px;
            border: none;
            background-color: #b9c9df;
        }
    </style>
</head>
<body>
    <header>
        <nav class="navbar navbar-expand-sm navbar-toggleable-sm navbar-light bg-white border-bottom box-shadow mb-3">
            <div class="container">
                <a class="navbar-brand" asp-area="" asp-controller="Home" asp-action="Index">Animal Store</a>
                <button class="navbar-toggler" type="button" data-toggle="collapse" data-target=".navbar-collapse" aria-controls="navbarSupportedContent"
                        aria-expanded="false" aria-label="Toggle navigation">
                    <span class="navbar-toggler-icon"></span>
                </button>
                <div class="navbar-collapse collapse d-sm-inline-flex flex-sm-row-reverse">
                    <ul class="navbar-nav flex-grow-1">
                        <li class="nav-item">
                            <a class="nav-link text-dark" asp-area="" asp-controller="Pets" asp-action="Index">pets</a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link text-dark" asp-area="" asp-controller="Stores" asp-action="Index">Stores</a>
                        </li>

                        @if (@ViewBag.msg != null)

                        {
                            <li class="nav-item">
                                <a class="nav-link text-dark" asp-area="" asp-controller="Customers" asp-action="Index">@ViewBag.msg</a>
                            </li>
                        }
                        @if (@ViewBag.MyPets != null)
                        {
                            <li class="nav-item">
                                <a class="nav-link text-dark" asp-area="" asp-controller="Pets" asp-action="MyPets">@ViewBag.MyPets</a>
                            </li>
                        }
                        <li class="nav-item">
                            <a class="nav-link text-dark" asp-area="" asp-controller="Home" asp-action="Contact">Tips</a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link text-dark" asp-area="" asp-controller="Charts" asp-action="BasicStatistics">Statistics</a>
                        </li>
                        @if (ViewBag.userId != null)
                        {
                            <li class="nav-item">
                                <a class="nav-link text-dark" asp-area="" asp-controller="Customers" asp-action="Details" asp-route-id="@ViewBag.userId"><il class="fas fa-user-cog"></il> my acuont</a>
                            </li>
                        }




                    </ul>


                </div>
                <div class="navbar-collapse collapse d-sm-inline-flex flex-sm-row-reverse">
                    <ul class="nav navbar-nav navbar-right">

                        <il class="nav-item">

                            <a href="https://www.facebook.com/Animal_Store-109014960924628/" class="nav-link text-dark"><i class="fab fa-facebook"style="font-size:22px"></i></a>
                        </il>
                        @if (ViewBag.message != null)
                        {
                            <li>
                                <a style="float:right" class="nav-link text-dark" asp-area="" asp-controller="Customers" asp-action="Login1"><i class="fa fa-fw fa-user"></i>@ViewBag.message</a>
                            </li>
                        }
                        @if (ViewBag.message2 != null)
                        {
                            <li>
                                <a class="nav-link text-dark" style="float:right" asp-area="" asp-controller="Customers" asp-action="LogOut"><i class="fa fa-fw fa-user"></i>@ViewBag.message2</a>

                            </li>
                            @if (ViewBag.wish != null)
                            {
                                <li class="nav-item">
                                    <a class="nav-link text-dark" asp-area="" asp-controller="Pets" asp-action="myWish"><i class="fas fa-heart" style="font-size:22px;color:#F2C5D0;"></i></a>
                                </li>
                            }
                         
                        }


                    </ul>
                </div>
                </div>
</nav>
 
    </header>
    <div class="container">
        <main role="main" class="pb-3">
            @RenderBody()
        </main>
    </div>

    <footer class="border-top footer text-muted">
        <div class="container">
            &copy; 2020 - Animal_Store - Danielle Aharon - Lidor Pnini - Amit Klein - Shaked Ben Yechezkel @*<a asp-area="" asp-controller="Home" asp-action="Home">Home</a>*@
        </div>
    </footer>
    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>
    @RenderSection("Scripts", required: false)
</body>
</html>
